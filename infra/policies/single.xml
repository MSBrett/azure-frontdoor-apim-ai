<policies>
    <inbound>
        <set-backend-service backend-id="OPENAIEASTUS" />
        <set-header name="api-key" exists-action="override">
            <value>{{OPENAI-API-KEY-EASTUS}}</value>
        </set-header>
        <rewrite-uri template="@{return context.Request.OriginalUrl.Path;}" />
        <base />
    </inbound>
    <backend>
        <retry condition="@(context.Response.StatusCode >= 400)" count="3" interval="5" first-fast-retry="true">
            <set-backend-service backend-id="OPENAIEASTUS" />
            <set-header name="api-key" exists-action="override">
                <value>{{OPENAI-API-KEY-EASTUS}}</value>
            </set-header>
            <forward-request buffer-request-body="true" />
        </retry>
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>